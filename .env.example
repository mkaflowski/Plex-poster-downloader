# Copy this file to .env and fill in your Plex server details

# Your Plex server URL (include http:// or https://)
PLEX_URL=http://192.168.1.100:32400

# Your Plex authentication token
# To get your token:
# 1. Log into Plex Web App
# 2. Go to Settings > Network > Show Advanced
# 3. Or use this URL: https://support.plex.tv/articles/204059436-finding-an-authentication-token-x-plex-token/
PLEX_TOKEN=your_plex_token_here

# Run mode: 'RUN' (once and exit) or 'TIME' (daily at specified time)
RUN_MODE=RUN

# Time to run daily (24-hour format HH:MM) - only used when RUN_MODE=TIME
RUN_TIME=09:00

# Run immediately when container starts in TIME mode (true/false)
RUN_ON_STARTUP=false

# Prefer TMDB posters over Fanart.tv
PREFER_TMDB=true

# Fanart.tv API key (required if ENABLE_FANART=true)
# Get your free API key at: https://fanart.tv/get-an-api-key/
FANART_API_KEY=your_fanart_api_key_here

# TMDB API key (optional - helps with better fanart matching)
# Get your free API key at: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# Preferred movie language for posters (2-letter ISO code, defaults to 'en')
# Examples: en (English), es (Spanish), fr (French), de (German), etc.
MOVIE_LANGUAGE=en

# Also ignore movies with 'Overlay' label (true/false)
# If true: excludes movies with either 'Fanart' or 'Overlay' labels
# If false: only excludes movies with 'Fanart' label
IGNORE_OVERLAY_TAGGED=true

# Use original language for Polish and Italian movies
ORIGINAL_LANGUAGE_COUNTRIES="PL,IT"

TZ=Europe/Warsaw